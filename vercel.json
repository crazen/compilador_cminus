{
  "version": 2,
  "builds": [
    {
      "src": "cminus-web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/cminus-web/$1" }
  ],
  "functions": {
    "api/*.js": {
      "includeFiles": "bin/**"
    }
  }
}
